<Application x:Class="WPFTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPFTest"
           
            ShutdownMode="OnExplicitShutdown"
    
    >
    <!--主函数入口文件（默认文件窗口  StartupUri="MainWindow.xaml"）启动主窗口之前有个一个登陆窗口-->
    <Application.Resources>

        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/WPFTest;component/Assets/Style/ScrollViewDictionary.xaml" />
                
                <ResourceDictionary>
                    <!--字体图标地址全局(变量)-->
                    <FontFamily x:Key="iconfont">pack://application:,,,/WPFTest;component/Assets/Fonts/#iconfont</FontFamily>
                </ResourceDictionary>
               
            </ResourceDictionary.MergedDictionaries>
           
            
        </ResourceDictionary>
 

       
        
    </Application.Resources>
</Application>


